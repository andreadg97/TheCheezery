<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/caramelfrap"
        android:id="@+id/producto_img"/>

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/producto_nombre"
            android:textSize="20sp"
            android:textColor="#B60089"
            android:text="Caramel Frap"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripcion del producto"
            android:textSize="10sp"
            android:textColor="#262525"
            android:id="@+id/producto_descripcion"/>

    </LinearLayout>

    <TextView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:text="$5"
        android:textStyle="bold"
        android:textSize="19sp"
        android:textColor="#9E2E81"
        android:id="@+id/producto_precio"/>

</LinearLayout>