<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:paddingBottom="10dp"
        android:paddingHorizontal="15dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/muffincombo"
            android:id="@+id/combo_img"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COMBO MUFFIN"
                android:id="@+id/combo_nombre"
                android:textSize="15sp"
                android:textColor="#B60089"
                android:textAlignment="center"
                android:paddingBottom="5dp"/>/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/combo_descripcion"
                android:text="HotDog con papas fritas y refresco"
                android:textSize="10sp"
                android:textColor="#262525"
                android:textAlignment="center"
                android:paddingBottom="5dp"/>/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$65"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#9E2E81"
                android:id="@+id/combo_precio"/>

    </LinearLayout>

</LinearLayout>